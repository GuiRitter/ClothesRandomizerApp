<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    >
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_type_string"
        />
    <Spinner
        android:id="@+id/main_type_spinner_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    </Spinner>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/select_location_string"
        />
    <Spinner
        android:id="@+id/main_location_spinner_id"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
    </Spinner>
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/uses_string"
        />
    <ListView
        android:id="@+id/main_list_view_id"
        android:layout_weight="1"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        >
    </ListView>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickRandomizeButton"
        android:text="@string/randomize_button_string"
        />
</LinearLayout>
